{% extends 'base.html.twig' %}

{% block title %}
    Quai Antique - Bienvenue !
{% endblock %}

{% block body %}

{% if not plats.items is same as([]) %}

<div class="container MarginPageTop">
    {# flash info success a la modification du profil utilisateur #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-4">
            {{ message }}
        </div>
    {% endfor %}
    <div class="jumbotron">
        <h1 class="display-4 text-center text-warning">Bienvenue au Quai Antique!</h1>
        <p class="lead text-center">Venez déguster nos délicieux produit issu de notre belle région La Savoie !</p>
        <hr class="my-4">
    </div>

    <div class="row row-cols-xxl-4 row-cols-lg-3 row-cols-md-2">
        {% for plat in plats %}
        <div class="col-sm-10 col-xs-12">
            <div class="imageStyle mt-4">
                <img class="fit-picture border border-primary" src=" {{ vich_uploader_asset(plat, 'imageFile') }} " alt="image de plats incontournable">
                <span class="a-txt text-center"><h3> {{plat.title}}</h3> </span>
            </div>
        </div>
        {% endfor %}
    </div>
    <div class="navigation d-flex justify-content-center mt-4">
        {{ knp_pagination_render(plats) }}
    </div>
    <div class="m-4">
        <a class="btn btn-primary btn-lg" href="{{ path('app_reservations') }}">Réserver une table</a>
    </div>

    {% else %}
        <h4 class="m-4">Il n'y a pas de plats</h4>
    {% endif %}
</div>

{# inclusion du footer #}
{% include 'partials/_footer.html.twig' %}

<style>
    .MarginPageTop{
        margin-top:15vh;
    }
    img{
        min-height:280px;
        max-height:280px;
    }
    .active1 {
        color:orange;
    }
    .imageStyle {
        display: grid;
    }
    .imageStyle>*{
    grid-area:1/1/-1/-1; 
    /* raccourci pour grid-row et grid-column */
    }
    .a-txt{
    display:flex;
    justify-content:center;
    align-items:center;
    color:#fff;
    opacity:0;
    transition:opacity .8s;
    }
    .a-txt:hover{
    opacity:1;
    background:#999999;
    }
    img{
    width:100%;
    height:auto;
    border-radius:4px
    }
    a{
    text-decoration:none;
    }
</style>

{% endblock %}

