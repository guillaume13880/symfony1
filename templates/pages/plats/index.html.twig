{% extends 'base.html.twig' %}

{% block title %}Quai Antique - Les Plats{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% if not plats.items is same as([]) %}

        <h1 class="text-warning text-center">Liste des plats Incontournables</h1>

        <a href=" {{ path('app_plats.new') }}" class="btn btn-primary">
            Créer un Plat
        </a>

        {# flash info success a la création d'un plats #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}

        <div class="count mt-4">
            <h4>Il y a {{ plats.getTotalItemCount }} plats au total ! </h4>
        </div>

        <table class="table table-hover">
            <thead>
                <tr class="table-dark">
                    <th scope="col">Numéro</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Image</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Description</th>
                    <th scope="col">Catégorie</th>
                    <th scope="col">Edition</th>
                    <th scope="col">Suppression</th>
                </tr>
            </thead>
            <tbody>
                {% for plat in plats %}
                    <tr class="table-active">
                        <th scope="row">{{plat.id}}</th>
                        <td>{{plat.title}}</td>
                        <td>{{plat.image}}</td>
                        <td>{{plat.prix}}</td>
                        <td>{{plat.description}}</td>
                        <td>categorie</td>
                        <td>
                            <a href="{{ path('app_plats.edit', { id: plat.id }) }}" class="btn btn-info">Modifier</a>
                        </td>
                        <td>
                            <a href="{{ path('app_plats.delete', { id: plat.id }) }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                
            </tbody>
        </table>
        
        <div class="navigation d-flex justify-content-center mt-4">
            {{ knp_pagination_render(plats) }}
        </div>
    {% else %}
        <h4 class="m-4">Il n'y a pas de plats</h4>
    {% endif %}
    </div>
<style>
     .active5 {
        color:orange;
    }
</style>
{% endblock %}
