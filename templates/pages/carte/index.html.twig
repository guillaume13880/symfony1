{% extends 'base.html.twig' %}

{% block title %}Quai Antique - La Carte {% endblock %}

{% block body %}

<div class="container MarginPageTop">
    <h1 class="display-4 text-center text-warning mt-4">La Carte du Restaurant</h1>

    <ul class="nav nav-tabs d-flex justify-content-center MarginPageTop2" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" data-bs-toggle="tab" href="#entrées" aria-selected="true" role="tab">Entrées</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" data-bs-toggle="tab" href="#plats" aria-selected="false" role="tab" tabindex="-1">Plats</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" data-bs-toggle="tab" href="#desserts" aria-selected="false" role="tab" tabindex="-1">Desserts</a>
        </li>
    </ul>
    <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade active show" id="entrées" role="tabpanel">
            <h2 class="text-warning display-6 mt-4">Nos Entrées :</h2>
            <div class="row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
                {% for plat in plats %}
                    
                <div class="col-sm-10 col-xs-12">
                    <div class="card border-warning mb-3">
                        <img class="card-img-top border-bottom border-warning" src=" {{ vich_uploader_asset(plat, 'imageFile') }} " alt="image de plats incontournable">
                        <div class="card-body">
                            <p class="card-header text-center">{{ plat.title }}</p>
                            <p class="">{{ plat.description }}</p>
                        </div>
                        <div class="card-footer">
                            <div class="text-end me-4">{{ plat.prix }} €</div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        <div class="tab-pane fade" id="plats" role="tabpanel">
            <h2 class="text-warning display-6 mt-4">Les Plats :</h2>
            <div class="row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
                {% for plat in plats2 %}
                <div class="col-sm-10 col-xs-12">
                    <div class="card border-warning mb-3">
                        <img class="card-img-top border-bottom border-warning" src=" {{ vich_uploader_asset(plat, 'imageFile') }} " alt="image de plats incontournable">
                        <div class="card-body">
                            <p class="card-header text-center">{{ plat.title }}</p>
                            <p class="">{{ plat.description }}</p>
                        </div>
                        <div class="card-footer">
                            <div class="text-end me-4">{{ plat.prix }} €</div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        <div class="tab-pane fade" id="desserts">
            <h2 class="text-warning display-6 mt-4">Les Desserts :</h2>
            <div class="row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
                {% for plat in plats3 %}
                <div class="col-sm-10 col-xs-12">
                    <div class="card border-warning mb-3">
                        <img class="card-img-top border-bottom border-warning" src=" {{ vich_uploader_asset(plat, 'imageFile') }} " alt="image de plats incontournable">
                        <div class="card-body">
                            <p class="card-header text-center">{{ plat.title }}</p>
                            <p class="">{{ plat.description }}</p>
                        </div>
                        <div class="card-footer">
                            <div class="text-end me-4">{{ plat.prix }} €</div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    
    

    

    
    <div class="m-4">
        <a class="btn btn-warning btn-lg" href="{{ path('app_reservations') }}">Réserver une table</a>
    </div>
</div>

{% include 'partials/_footer.html.twig' %}


<style>
    .MarginPageTop{
        margin-top:15vh;
    }
    .MarginPageTop2{
        margin-top:10vh;
    }
     .active2 {
        color:orange;
    }

    img{
        min-height:260px;
        max-height:260px;
    }
    .card{
        border-radius:25px 25px 5px 5px;
        min-height:500px;
        max-height:500px;
    }
    .card-body{
        overflow:auto;
    }

</style>
{% endblock %}
