{% extends 'base.html.twig' %}

{% block title %}
    Quai Antique - Nos Menus !
{% endblock %}

{% block body %}

{% if not menus.items is same as([]) %}

<div class="container text-center mt-4">
    {% for menu in menus %}
        <h1 class="display-4 text-warning text-center m-4">Nos Menus du Moment!</h1>
        <div class="container border border-primary">
            <h2 class="mt-4"> {{menu.titre}} </h2>

            <h5 class="mt-4"> {{menu.formule1}} </h5>
            <p> {{menu.description1}} </p>
            <p> {{menu.prix1}} € </p>

            <h5 class="mt-4"> {{menu.formule2}} </h5>
            <p> {{menu.description2}} </p>
            <p> {{menu.prix2}} € </p>
        </div>
        
    {% endfor %}
    <div class="navigation d-flex justify-content-center m-4">
        {{ knp_pagination_render(menus) }}
    </div>
    <div class="d-flex justify-content-start m-4">
        <button class="btn btn-primary btn-lg"; type="button">Réserver une table</button>
    </div>

    {% else %}
        <h4 class="m-4">Il n'y a pas de Menu</h4>
    {% endif %}
</div>
<style>
     .active2 {
        color:orange;
    }
</style>

{% endblock %}
