{% extends 'base.html.twig' %}

{% block title %}Quai Antique - Connexion{% endblock %}

{% block body %}
    <div class="container">

        <div class="card mt-4 p-4">
            <div class="card-body">
                <h1 class=" text-warning text-center">Formulaire de Connexion</h1>

                {% if error %}
                    <div class="alert alert-danger mt-4">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form  action=" {{ path('app_security.login') }} " method="post">
                    <div class="form-group">
                        <label for="username" class="form-label mt-4">Adresse email</label>
                        <input type="email" class="form-control" id="username" name="_username" placeholder="quai-antique@exemple.fr" value="{{ last_username }}">
                        <small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais votre e-mail avec quelqu'un d'autre.</small>
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-label mt-4">Mot de passe</label>
                        <input type="password" class="form-control" id="password" name="_password" placeholder="********">
                    </div>

                    <button type="submit" class="btn btn-primary mt-4">Se connecter</button>
                </form>
            </div>
        </div>

    </div>
{% endblock %}
